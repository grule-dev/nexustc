{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun src/index.ts --watch --port=3000",
    "build": "tsdown",
    "check-types": "tsc --noEmit",
    "compile": "bun build ./src/index.ts --outfile ./dist/index.js --target browser --format esm --minify --sourcemap --external cloudflare:workers"
  },
  "dependencies": {
    "hono": "catalog:",
    "@orpc/server": "catalog:",
    "@orpc/openapi": "catalog:",
    "@orpc/zod": "catalog:",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@repo/api": "workspace:*",
    "@repo/auth": "workspace:*",
    "@repo/db": "workspace:*",
    "@repo/env": "workspace:*"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250822.0",
    "@repo/config": "workspace:*",
    "@types/node": "^22.13.11",
    "alchemy": "^0.77.0",
    "tsdown": "^0.16.5",
    "typescript": "^5.8.2",
    "vite": "^7.3.0",
    "wrangler": "^4.40.3"
  }
}
